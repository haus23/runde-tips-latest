{
  "include": ["**/*.ts", "**/*.tsx"],
  "compilerOptions": {
    // Source code
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "jsx": "react-jsx",
    "verbatimModuleSyntax": true,

    // Best practices
    "isolatedModules": true,
    "moduleDetection": "force",
    "skipLibCheck": true,

    // Target (Bundler)
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ES2022",
    "noEmit": true,

    // DX
    "paths": {
      "#*": ["./*"]
    }
  }
}
